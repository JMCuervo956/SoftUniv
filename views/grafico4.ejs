<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gráfico de Pastel 3D con Highcharts</title>
    <style>
        #container {
            width: 100%;
            height: 600px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div id="container"></div>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/highcharts-3d.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
    <script>
        Highcharts.chart('container', {
            chart: {
                type: 'pie',
                options3d: {
                    enabled: true,
                    alpha: 45,
                    beta: 0
                }
            },
            title: {
                text: 'Gráfico de Pastel 3D con Highcharts'
            },
            plotOptions: {
                pie: {
                    innerSize: 100,
                    depth: 250,
                    dataLabels: {
                        enabled: true,
                        format: '{point.name}: {point.y:.1f}%'
                    }
                }
            },
            series: [{
                name: 'Porcentaje',
                data: [
                    ['Red', 40],
                    ['Blue', 35],
                    ['Yellow', 25]
                ]
            }],
            tooltip: {
                formatter: function() {
                    return `<b>${this.point.name}</b>: ${this.point.y}%<br>Additional Info: ${this.point.additionalInfo}`;
                }
            }
        });
    </script>
</body>
</html>
