<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/style.css">
    <title>Asamblea</title>
    <%- include('partials/head') %> <!-- <link rel="stylesheet" href="main.css"> /// partial para repetir en cada una de las paginas -->
</head>
<body>
    <%- include('partials/navigation') %>  
    <h5>Usuario: <%= id %></h1> 
    <div class="content">
        <div class="register-form"> 
            <h4>Registro de Usuarios</h4>
            <form action="/register" method='POST'> 
                <div class="contenedor__login-register">
<!--                    <label for="user" >Usuario</label>           -->
                    <input type="text" name="user" class="input-small" placeholder="Usuario" required>
<!--                    <label for="name" >Nombre</label>           -->
                    <h1></h1>
                    <input type="text" name="name" class="input-small" placeholder="Nombre" required>
<!--                    <label for="name" >Contraseña</label>       -->    
                    <h1></h1>    
                    <input type="password" name="pass" class="input-small" placeholder="Contraseña" required>
                    <h1></h1>
                    <label for="rol">Rol</label>           
                    <select name="rol" id="rol" class="select-css">
                        <option value="admin" selected>Usuario</option>
                        <option value="Usuario">Administrador</option>
                    </select>
                    <div style="display: inline;">
                        <h5></h5>
                        <a href="/" class="btn-cancel">Cancelar</a><input type="submit" class="btn-save" value="Registrar">
                    </div>
                </div>       
            </form>    
        </div>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <% if(typeof alert != "undefined") { %>
            <script>
                Swal.fire({
                    title: '<%= alertTitle %>',
                    text: '<%= alertMessage %>',
                    icon: '<%= alertIcon %>',
                    showConfirmButton: '<%= showConfirmButton %>',
                    timer: <%= timer %>
                }).then(()=>{
                    window.location='/ <%= ruta %>'
                })
            </script>
            <% } %>
    </div>
    <%- include('partials/footer') %>
</body>
</html>
